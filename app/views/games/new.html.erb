<h1>New game</h1>
<h2><%= params[:score] %></h2>

<% @letters.each do |letter| %>
<span><%= letter %></span>
<% end %>



<form action="/score" method="POST" data-turbo="false">
  <!-- ... -->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="">Type the longest word</label>
  <input type="hidden" name="letters" value="<%= @letters.join %>">
  <input type="hidden" name="score" value="<%= params[:score] %>">
  <input type="text" name="word">
  <input type="submit">
</form>
